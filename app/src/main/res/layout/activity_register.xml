<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp">
    <!--Phần này ko sửa-->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/main_logo" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPORTA"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:textSize="36dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dễ dàng - Vui vẻ - Hấp dẫn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appName"
        android:id="@+id/title"
        android:textSize="18dp"
        android:textColor="#FF9800"
        android:textAlignment="center"/>
    <!--    Phần này ko sửa-->
    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/register_email"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Nhập Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:background="@drawable/edtlogin"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/register_pass"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Nhập mật khẩu"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_email"
        android:background="@drawable/edtlogin"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/register_re_pass"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:hint="Nhập lại mật khẩu"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_pass"
        android:background="@drawable/edtlogin"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        android:background="@drawable/bgbtnloginlogout"
        android:layout_below="@+id/register_re_pass"
        android:text="Đăng ký"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#F44336"
        android:textSize="14dp"/>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/back"
        android:textAlignment="center"
        android:background="@drawable/back_icon"/>
</RelativeLayout>